<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAM  CONTROLS"
                android:textColor="@color/colorAccent"
                android:paddingTop="30dp"
                android:textSize="20dp"
                android:paddingLeft="130dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level of water in the Dam"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="45dp"
                    android:textSize="16dp"
                    android:paddingBottom="45dp"
                    android:paddingLeft="30dp"/>
                <TextView
                    android:id="@+id/waterlevelTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:paddingLeft="30dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:paddingBottom="45dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inflow to the dam"
                    android:textSize="16dp"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/InflowTV"
                    android:text="Inflow"
                    android:paddingLeft="80dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/TestView"
                    android:text="Outflow from the Dam"
                    android:paddingLeft="30dp"
                    android:textSize="16dp"
                    android:paddingTop="0dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/OutflowTV"
                    android:paddingLeft="50dp"
                    android:text="Outflow"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextView1"
                    android:textColor="@color/colorAccent"
                    android:text="Level of water in Canal"
                    android:paddingTop="45dp"
                    android:textSize="16dp"
                    android:paddingLeft="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/LevelTV"
                    android:text="Level in Canal"
                    android:paddingLeft="50dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:paddingLeft="30dp"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:text="FOR ANY PROBLEMS PLEASE FILL THE GOOGLE FORM "/>

            <!--<WebView-->
            <!--android:id="@+id/webview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:clickable="true"
                android:id="@+id/linkTV"
                android:textColor="@color/colorAccent"
                android:paddingTop="25dp"
                android:textSize="20dp"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>