<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mileagecheck">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="MileageCalculator"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".History"></activity>
        <activity android:name=".FuelLogger" />
        <activity android:name=".SelectionPage" />
        <activity android:name=".ServerAuthCodeActivity" />
        <activity android:name=".IdTokenActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>